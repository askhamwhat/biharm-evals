# FORTRAN zhelmstokesallstreammatmany(dcomplex[1] zk,int[1] ns, double[] src, int[1] nt, double[] targ, dcomplex [] src_norm, dcomplex[1] cs, dcomplex[1] cd, inout dcomplex[] mat2);

mat2 = reshape(mat2,1,2,nt,ns);

